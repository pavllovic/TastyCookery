mixin benefit(benefit)
  div(class='benefit')
    picture
      source(srcset=`${require(`Images/benefits/${benefit.image}.webp`)},
                    ${require(`Images/benefits/${benefit.image}-2x.webp`)} 2x`
            type='image/webp')
      source(srcset=`${require(`Images/benefits/${benefit.image}.png`)},
                    ${require(`Images/benefits/${benefit.image}-2x.png`)} 2x`
            type='image/jpg')
      img(class='benefit--img' src=require(`Images/benefits/${benefit.image}.png`) width='338' height='338' alt=`${benefit.alt}`)
    p(class='benefit--description')!= `${benefit.text}`